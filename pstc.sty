% metafunctions (for math envs)
\newcounter{funargs}
\newcommand{\commaseplist}[1]{
  #1
  \setcounter{funargs}{\thefunargs - 1}
  \ifthenelse{\equal{\thefunargs}{0}}{)}{
    \@ifnextchar\bgroup
      {, \commaseplist}
      {)}}
}
\newcommand{\metafun}[2][0]{%
  \setcounter{funargs}{#1}%
  \meta{#2}%
    \ifthenelse{\equal{\thefunargs}{0}}
      {\xspace}
      {\@ifnextchar\bgroup
        {(\commaseplist}
        {\xspace}}}
\newcommand{\apps}[1]{%
  #1%
  \@ifnextchar\bgroup
    {\: \apps}
    {\xspace}
}

